{
  "name": "@lavamoat/tss-snap",
  "version": "0.1.0",
  "description": "Snap for threshold signatures.",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/LavaMoat/demo-gg20-wasm.git"
  },
  "license": "MIT",
  "files": [
    "bundle.js",
    "images/",
    "snap.manifest.json"
  ],
  "scripts": {
    "clean": "rm -rf dist .parcel-cache && mkdir dist",
    "build:snap": "yarn clean && mm-snap build -s snap.js -d . && yarn build:assets",
    "build:assets": "cp -r images dist/ && cp -r snap.manifest.json dist && cp -r bundle.js dist",
    "build": "yarn build:snap && parcel build src/index.html",
    "types": "tsc --noEmit --project tsconfig.json",
    "fmt": "prettier --write . --no-color",
    "lint": "eslint src",
    "start": "yarn build:snap && parcel src/index.html --port 7070"
  },
  "devDependencies": {
    "@metamask/snaps-cli": "0.25.0",
    "@metamask/types": "^1.1.0",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.28.0",
    "eslint-plugin-react": "^7.31.11",
    "ganache": "^7.5.0",
    "parcel": "^2.8.0",
    "prettier": "^2.6.2",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@lavamoat/mpc-client": "file:../../packages/client",
    "@lavamoat/mpc-ecdsa-wasm": "file:../../packages/wasm/pkg",
    "@lavamoat/mpc-snap-wasm": "file:../wasm/pkg",
    "@metamask/detect-provider": "^1.2.0",
    "@mui/icons-material": "^5.10.15",
    "@mui/material": "^5.10.15",
    "@reduxjs/toolkit": "^1.8.1",
    "comlink": "^4.3.1",
    "date-fns": "^2.29.3",
    "ethers": "5.7.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^7.2.8",
    "react-router-dom": "^6.3.0"
  }
}

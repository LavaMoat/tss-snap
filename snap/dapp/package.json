{
  "name": "@metamask/mpc-snap",
  "version": "0.1.0",
  "description": "Frontend for the threshold signing snap.",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/LavaMoat/ecdsa-wasm.git"
  },
  "license": "MIT",
  "files": [
    "dist/",
    "images/",
    "snap.manifest.json"
  ],
  "scripts": {
    "build:snap": "mm-snap build -s snap.js -d . && yarn build:public",
    "build:public": "cp -r images dist/ && cp -r snap.manifest.json dist && cp -r package.json dist && cp -r bundle.js dist",
    "types": "tsc --noEmit --project tsconfig.json",
    "start": "parcel src/index.html --port 7070"
  },
  "devDependencies": {
    "@metamask/snaps-cli": "^0.10.7",
    "@metamask/types": "^1.1.0",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "parcel": "^2.4.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
